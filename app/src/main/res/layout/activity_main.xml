<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_green_flag"
        android:layout_marginVertical="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        android:fontFamily="@font/museosans_300"
        android:paddingHorizontal="30dp"
        android:text="@string/app_desc"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <ImageView
        android:id="@+id/img_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="60dp"
        android:minWidth="20dp"
        android:minHeight="15dp"
        android:src="@drawable/tick"
        app:layout_constraintStart_toStartOf="@+id/desc"
        app:layout_constraintTop_toBottomOf="@+id/desc"/>

    <TextView
        android:id="@+id/txt_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car health updates"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_line1"
        app:layout_constraintStart_toEndOf="@id/img_line1"
        app:layout_constraintTop_toTopOf="@+id/img_line1"/>

    <ImageView
        android:id="@+id/img_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="15dp"
        android:src="@drawable/tick"
        app:layout_constraintTop_toBottomOf="@id/img_line1"
        app:layout_constraintStart_toStartOf="@id/img_line1"/>

    <TextView
        android:id="@+id/txt_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request a rescue online"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_line2"
        app:layout_constraintStart_toEndOf="@id/img_line2"
        app:layout_constraintTop_toTopOf="@id/img_line2"/>

    <ImageView
        android:id="@+id/img_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="15dp"
        android:src="@drawable/tick"
        app:layout_constraintTop_toBottomOf="@id/img_line2"
        app:layout_constraintStart_toStartOf="@id/img_line2"/>

    <TextView
        android:id="@+id/txt_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policy information"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_line3"
        app:layout_constraintStart_toEndOf="@id/img_line3"
        app:layout_constraintTop_toTopOf="@id/img_line3"/>

    <ImageButton
        android:id="@+id/btn_account"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/gradient_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/btn_account"
        app:layout_constraintStart_toStartOf="@id/btn_account"
        app:layout_constraintEnd_toEndOf="@id/btn_account"
        app:layout_constraintBottom_toBottomOf="@id/btn_account"/>

</androidx.constraintlayout.widget.ConstraintLayout>